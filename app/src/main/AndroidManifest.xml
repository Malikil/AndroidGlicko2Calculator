<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group10.glicko2calculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" />
        <activity
            android:name=".AddGameActivity"
            android:label="@string/title_activity_add_game" />
        <activity
            android:name=".AddPlayerActivity"
            android:label="@string/title_activity_add_player" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".PlayersActivity"
            android:label="@string/title_activity_players"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GamesActivity"
            android:label="@string/title_activity_games"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>